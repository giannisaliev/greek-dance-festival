// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?   // Optional now for OAuth users
  firstName     String
  lastName      String
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  participant Participant?
  accounts    Account[]
  sessions    Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Participant {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone                 String
  packageType           String
  guinnessRecordAttempt Boolean  @default(false)
  greekNight            Boolean  @default(false)
  totalPrice            Int      // Total price in euros
  checkedIn             Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Schedule {
  id         String   @id @default(cuid())
  day        String   // "Friday", "Saturday", "Sunday"
  date       String   // "June 12", "June 13", "June 14"
  time       String   // e.g., "10:00 - 11:30"
  lecturer   String   // Lecturer/Instructor name
  danceStyle String   // e.g., "Syrtos", "Kalamatianos"
  level      String   // e.g., "Beginner", "Intermediate", "Advanced"
  hall       String?  // "Hall 1", "Hall 2", "Hall 3", or null for special events
  color      String?  // Hex color code for display
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Settings {
  id                   String   @id @default("settings")
  registrationOpen     Boolean  @default(false)
  registrationMessage  String   @default("Registration opens on March 1st, 2026")
  updatedAt            DateTime @updatedAt
}
