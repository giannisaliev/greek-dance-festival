// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?   // Optional now for OAuth users
  firstName     String    @default("")
  lastName      String    @default("")
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  isTeacher     Boolean   @default(false)   // Teacher or dance studio owner
  studioName    String?                     // Dance studio name (if applicable)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  participant Participant?
  accounts    Account[]
  sessions    Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Participant {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  registrantFirstName   String?  // Custom first name for registration (if different from user)
  registrantLastName    String?  // Custom last name for registration (if different from user)
  phone                 String
  packageType           String
  guinnessRecordAttempt Boolean  @default(false)
  greekNight            Boolean  @default(false)
  totalPrice            Int      // Total price in euros
  checkedIn             Boolean  @default(false)
  registeredBy          String?  // ID of the teacher/studio owner who registered this participant
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Schedule {
  id         String   @id @default(cuid())
  day        String   // "Friday", "Saturday", "Sunday"
  date       String   // "June 12", "June 13", "June 14"
  time       String   // e.g., "10:00 - 11:30"
  lecturer   String   // Lecturer/Instructor name
  danceStyle String   // e.g., "Syrtos", "Kalamatianos"
  level      String   // e.g., "Beginner", "Intermediate", "Advanced"
  hall       String?  // "Hall 1", "Hall 2", "Hall 3", or null for special events
  color      String?  // Hex color code for display
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Settings {
  id                   String   @id @default("settings")
  registrationOpen     Boolean  @default(false)
  registrationMessage  String   @default("Registration opens on March 1st, 2026")
  showTbaTeachers      Boolean  @default(false)
  tbaTeachersCount     Int      @default(3)
  updatedAt            DateTime @updatedAt
}

model Teacher {
  id            String   @id @default(cuid())
  name          String
  image         String   // URL to teacher image (Vercel Blob)
  teachingStyle String
  country       String   // Country name
  countryCode   String   // ISO 3166-1 alpha-2 country code for flag
  imagePadding  Int      @default(0) // Top padding for image display (0-100)
  instagram     String?  // Instagram handle or URL (optional)
  facebook      String?  // Facebook profile URL (optional)
  order         Int      @default(0) // For sorting teachers
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Hotel {
  id          String   @id @default(cuid())
  name        String
  logo        String?  // Path to hotel logo image
  stars       Int      // 1-5 star rating
  location    String   // Google Maps embed URL
  description String?
  images      String[] // Array of image paths
  prices      Json     // JSON object for different room types and prices
  amenities   String[] // Array of amenities
  order       Int      @default(0) // For sorting hotels
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Attraction {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String   // Image URL
  badge       String   // Short info text (e.g., "15 min walk from waterfront")
  order       Int      @default(0) // For sorting attractions
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Analytics {
  id          String   @id @default(cuid())
  userId      String?  // Null for anonymous visitors
  sessionId   String   // Unique session identifier
  eventType   String   // "page_view", "click", "navigation", etc.
  eventName   String   // Specific event like "view_pricing", "click_register", etc.
  pagePath    String   // Current page path
  metadata    Json?    // Additional data like button text, link destination, etc.
  ipAddress   String?  // Visitor IP address
  userAgent   String?  // Browser user agent
  referrer    String?  // Referring page
  isAdmin     Boolean  @default(false) // Flag to exclude admin users
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([sessionId])
  @@index([eventType])
  @@index([createdAt])
  @@index([isAdmin])
}
