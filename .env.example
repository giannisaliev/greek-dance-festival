# ===========================================
# Greek Dance Festival - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database Connection
# For SQLite (development): file:./dev.db
# For production, consider PostgreSQL: postgresql://user:password@host:5432/dbname
DATABASE_URL="file:./dev.db"

# JWT Secret for authentication (MUST change in production!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# NextAuth Configuration
# NEXTAUTH_URL should be your production domain
NEXTAUTH_URL=https://yourdomain.com
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-characters

# Google OAuth Configuration (optional)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
ADMIN_EMAIL=admin@yourdomain.com
